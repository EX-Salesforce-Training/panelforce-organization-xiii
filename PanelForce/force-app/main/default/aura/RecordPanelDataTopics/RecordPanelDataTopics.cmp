<aura:component>
    <aura:attribute name="topic" type="Topic__c"/>
    
	<div class ="container">
            <div class="flexRow">
                <span class="centerTitle">Technology:</span>
               <span class="">{!v.topic.Name}</span>
            </div>
            <div class="otherCon">
                <div class ="flexRow">
                    <span>Max Score:</span>
                    <span>{!v.topic.Max_Score__c}</span>
                </div>
                <div class ="flexRow">
                    <span>Actual Score:</span>
                    <lightning:input type="number" value="{!v.topic.Actual_Score__c}"/>
                </div>
                <div class ="flexRow">
                    <span>Repanel:</span>
            		<lightning:input type="checkbox" value="{!v.topic.Repanel__c}"/>
            </div></div>
            <div class="comCon">
                <span>Comments:</span>
                <lightning:input type = "String" value = "{!v.topic.Comments__c}"/>

    </div></div>	        
</aura:component>